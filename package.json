{
  "name": "worksafe",
  "version": "0.1.0",
  "description": "Transform profanity and non-PC words into professional communication",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --hot src/server.ts",
    "build": "bun build ./src/index.html --outdir dist --minify --target=browser --sourcemap",
    "preview": "NODE_ENV=production bun src/server.ts",
    "lint": "biome check src && oxlint src",
    "lint:fix": "biome check --write src",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "latest",
    "lefthook": "^2.0.13",
    "oxlint": "^1.36.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@types/node": "^25.0.3",
    "obscenity": "^0.4.5",
    "vite": "^7.3.0"
  }
}
